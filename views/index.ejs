<%- include("./partials/header") %>

<nav class="navbar navbar-light bg-light">
    <div class="container-fluid">
      <a class="navbar-brand position-absolute top-100 start-50 translate-middle mt-3" href="/">TODO APP</a>
    </div>
  </nav>

  <div class="container mt-5">
    <form action="/add/todo" method="POST" class="d-flex">
        <input type="text" name="todo" class="form-control" placeholder="Enter TODO title">
        <input type="submit" value="ADD TODO" class="btn btn-md btn-primary mx-4">
    </form>

    <ul class="list-group my-5">
        <% todo.forEach(todos =>{ %>
            <li class="list-group-item"><%= todos.todo %><a href="/delete/todo/<%= todos._id %>" class="btn btn-danger btn-sm">Delete</a></li>
            
        <% }) %>
      </ul>
  </div>

<%- include("./partials/footer") %>

